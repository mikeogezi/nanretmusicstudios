extends layout

block content
      main.main-content
        .fullwidth-block.inner-content
          .container
            h2.page-title Contact Us
            .row
              .col-md-6
                #sendingmessage Sending...
                #scroll-after-post
                #notsentmessage You didn't fill the form properly
                #errormessage Your message couldn't be sent
                #sendmessage Your message was sent successfully
                form.contact-form(action='/contact', method='post', role='form')
                  input(type='text', required='required', id='name', name='name', placeholder='Full Name')
                  input(type='text', required='required', id='email', name='email', placeholder='Email Address')
                  input(type='text', required='required', id='subject', name='subject', placeholder='Subject')
                  textarea(name='message', required='required', id='message', placeholder='Message')
                  input(type='submit', value='Send message')
              .col-md-6
                .map-wrapper
                  address
                    include address
